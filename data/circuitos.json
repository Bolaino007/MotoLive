// === Mostrar informaciÃ³n de los circuitos ===
async function mostrarCircuitos() {
  try {
    const respuesta = await fetch('./data/circuitos.json');
    const circuitos = await respuesta.json();

    const contenedor = document.getElementById('circuitos');
    contenedor.innerHTML = '';

    circuitos.forEach(c => {
      const card = document.createElement('div');
      card.className = 'bg-gray-800 rounded-2xl p-4 mb-4 shadow-md';
      card.innerHTML = `
        <h4 class="text-lg font-semibold text-white mb-1">${c.nombre} (${c.pais})</h4>
        <img src="${c.imagen}" alt="${c.nombre}" class="w-full rounded-lg mb-2">
        <p>ğŸ“… Fecha: ${c.fecha}</p>
        <p>ğŸ“ Longitud: ${c.longitud} â€” Vueltas: ${c.vueltas}</p>
        <p>â±ï¸ Record: ${c.record} (${c.piloto_record})</p>
        <p>ğŸ§¤ NeumÃ¡ticos: D-${c.neumaticos_ideales.delantero} / T-${c.neumaticos_ideales.trasero}</p>
        <p>ğŸ›‘ Frenos: ${c.frenos}</p>
        <p>ğŸŒ¡ï¸ Amb: ${c.temperatura_ambiente} | Pista: ${c.temperatura_pista}</p>
        <p>â˜€ï¸ Clima: ${c.clima}</p>
      `;
      contenedor.appendChild(card);
    });
  } catch (error) {
    console.error('Error cargando circuitos:', error);
  }
}

// Ejecutar al cargar la pÃ¡gina principal
document.addEventListener('DOMContentLoaded', mostrarCircuitos);
